<div class="uk-section uk-section-secondary uk-light">
        <h1 class="text-center uk-heading-hero">Tactics<img id="logo" src="stratatree-logo.png"></h1>
      </div>
      <!-- NAV -->
      <a href="#offcanvas-slide" class="uk-button uk-button-primary" uk-toggle><span class="fa fa-bars"></span> Menu</a>

<div id="offcanvas-slide" uk-offcanvas>
    <div class="uk-offcanvas-bar">

        <ul class="uk-nav uk-nav-default">
            <li><a href="user/:id/account">Accounts</a></li>
            <li><a href="user/:id/goal">Goals</a></li>
            <li><a href="user/:id/strategy">Strategies</a></li>
<!-- begin modal -->
            <button class="uk-button uk-button-default uk-margin-small-right tactic-create" type="button" uk-toggle="target: #modal-example"><span class="fa fa-plus"></span> Tactic</button>

<!-- This is the modal -->
<div id="modal-example" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <!-- <h2 class="uk-modal-title">Account</h2> -->
        <p class="uk-text-muted">Create a new tactic, owner & source here.</p>
        <p><textarea class="uk-textarea tactic-input" id="inputTactic" placeholder="Enter Tactic Here"></textarea></p>
        <p><textarea class="uk-textarea tactic-owner-input" id="inputOwner" placeholder="Enter Owner Here"></textarea></p>
        <p><textarea class="uk-textarea tactic-source-input" id="inputSource" placeholder="Enter Source Here"></textarea></p>
        <p class="uk-text-right">
            <button class="uk-button uk-button-danger uk-modal-close" type="button"><span class="fa fa-times"></span></button>
            <button class="uk-button uk-button-primary tactic-add" id="tacticAdd" type="button"><span class="fa fa-check"></span></button>
        </p>
    </div>
</div>
<!-- end modal -->
        </ul>

    </div>
</div>
      <div class="uk-container">
      <div class="uk-child-width-1-3@m uk-grid-small uk-grid-match uk-grid">
{{!-- card begin --}}
{{#each tactic}}
      <div class="uk-card uk-card-default uk-card-body uk-width-1-2@m uk-height-1-6@m uk-card-hover">
            <h3 class="uk-card-title text-center">{{this.tactic}}</h3>
            <h3 class="uk-card-title text-center">Owner - {{this.owner}}</h3>
            <h3 class="uk-card-title text-center">Source - {{this.source}}</h3>
            <button class="uk-button uk-button-primary uk-button-small tactic-edit" data-id={{this.id}}>Edit</button>
            <button class="uk-button uk-button-danger uk-button-small tactic-delete" data-id={{this.id}}>Delete</button>
      </div>
{{/each}}
{{!-- card end --}}
    
   
      </div>