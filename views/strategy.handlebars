<div class="uk-section uk-section-secondary uk-light">
        <h1 class="text-center uk-heading-hero">Strategies</h1>
      </div>
<!-- NAV -->
      <a href="#offcanvas-slide" class="uk-button uk-button-primary" uk-toggle><span class="fa fa-bars"></span> Menu</a>

<div id="offcanvas-slide" uk-offcanvas>
    <div class="uk-offcanvas-bar">

        <ul class="uk-nav uk-nav-default">
            <li><a href="user/:id/account">Accounts</a></li>
            <li><a href="user/:id/goal">Goals</a></li>
<!-- begin modal -->
            <button class="uk-button uk-button-danger uk-margin-small-right strategy-create" type="button" uk-toggle="target: #modal-example"><span class="fa fa-plus"></span> Strategy</button>

<!-- This is the modal -->
<div id="modal-example" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <!-- <h2 class="uk-modal-title">Account</h2> -->
        <p class="uk-text-muted">Create a new strategy, owner & source here.</p>
        <p><textarea class="uk-textarea strategy-input" placeholder="Enter Strategy Here"></textarea></p>
        <p><textarea class="uk-textarea strategy-owner-input" placeholder="Enter Owner Here"></textarea></p>
        <p><textarea class="uk-textarea strategy-source-input" placeholder="Enter Source Here"></textarea></p>
        <p class="uk-text-right">
            <button class="uk-button uk-button-danger uk-modal-close" type="button"><span class="fa fa-times"></span></button>
            <button class="uk-button uk-button-primary strategy-add" type="button"><span class="fa fa-check"></span></button>
        </p>
    </div>
</div>
<!-- end modal -->
        </ul>

    </div>
</div>
      <div class="uk-container">
      <div class="uk-child-width-1-3@m uk-grid-small uk-grid-match uk-grid">
{{!-- card begin --}}
{{#each Strategy}}
      <div class="uk-card uk-card-default uk-card-body uk-width-1-2@m uk-height-1-6@m uk-card-hover">
            <h3 class="uk-card-title text-center">Strategy</h3>
            <h3 class="uk-card-title text-center">{{this.strategy}}</h3>
            <h3 class="uk-card-title text-center">Owner</h3>
            <h3 class="uk-card-title text-center">{{this.owner}}</h3>
            <h3 class="uk-card-title text-center">Source</h3>
            <h3 class="uk-card-title text-center">{{this.source}}</h3>
            <button class="uk-button uk-button-primary uk-button-small">Edit</button>
            <button class="uk-button uk-button-danger uk-button-small">Delete</button>
            <p><a href="user/:id/tactic"><button class="uk-button uk-button-default uk-button-small">Tactics</button></a></p>

      </div>
{{/each}}
{{!-- card end --}}
   
      </div>